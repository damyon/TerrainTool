form MainForm
{
    theme = res/common/default.theme
    width = 640
    height = 70
    alignment = ALIGN_TOP_RIGHT
    layout = LAYOUT_VERTICAL
    style = noBorder
    
    
    container TerrainToolbar
    {
        autoWidth = true
        autoHeight = true
   
        style = basic
        autoWidth = true
        autoHeight = true
        layout = LAYOUT_FLOW
        alignment = ALIGN_TOP
                
        radioButton NavigateButton
        {
            group = TerrainGroup
            text = Navigate
            selected = true
            height = 45
            width = 120
        }
        
        radioButton FlattenButton
        {
            group = TerrainGroup
            text = Flatten
            height = 45
            width = 120
        }
        radioButton RaiseButton
        {
            group = TerrainGroup
            text = Raise
            height = 45
            width = 120
        }
        radioButton LowerButton
        {
            group = TerrainGroup
            text = Lower
            height = 45
            width = 120
        }
        
        button GenerateTerrainButton
        {
            text = Generate New
            height = 45
            width = 120
        }
    }

}

form MainForm
{
    theme = res/common/default.theme
    width = 320
    height = 110
    alignment = ALIGN_TOP_RIGHT
    style = basic
    
    // Controls
    container MainFormContainer
    {
        style = noBorder
        autoWidth = true
        autoHeight = true
        layout = LAYOUT_FLOW
        button ShowGenerateTerrainForm
        {
            autoWidth = true
            text = Generate new terrain
            height = 45
        }
        button ShowLoadTerrainForm
        {
            autoWidth = true
            text = Load terrain file
            height = 45
        }
   }

    
}

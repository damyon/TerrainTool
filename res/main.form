form MainForm
{
    theme = res/common/default.theme
    width = 640
    height = 640
    position = 30, 30 
    layout = LAYOUT_VERTICAL
    style = noBorder
    consumeInputEvents = false
    
    container Spacer1
    {
        width = 640
        height = 20
    }
    container ModeToolbar
    {
        autoWidth = true
        height = 75
        layout = LAYOUT_FLOW
        alignment = ALIGN_TOP
        style = noBorder
                
        radioButton NavigateButton
        {
            group = ModeGroup
            text = Navigate
            selected = true
            height = 45
            width = 120
        }
        
        radioButton TerrainButton
        {
            group = ModeGroup
            text = Terrain
            height = 45
            width = 120
        }
        
    }
    container TerrainToolbar
    {
        visible = false
        width = 120
        height = 450
        layout = LAYOUT_VERTICAL
        
        slider SizeSlider
        {
            text = Size
            selected = true
            min = 500.0
            max = 50000.0
            value = 500.0
            step = 1.0
            height = 45
            width = 120
        }
    
        button FlattenButton
        {
            text = Flatten
            height = 45
            width = 120
        }
        button RaiseButton
        {
            text = Raise
            height = 45
            width = 120
        }
        button LowerButton
        {
            text = Lower
            height = 45
            width = 120
        }
        button SmoothButton
        {
            text = Smooth
            height = 45
            width = 120
        }
        button GenerateTerrainButton
        {
            text = Generate New
            height = 45
            width = 120
        }
    

           
        
    }

}
